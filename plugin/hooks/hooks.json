{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/session-init.sh",
            "timeout": 10000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'NEVER use Read/Glob/Grep on code files (.rs .py .ts .js .go .lean) or indexed PDFs. Use coderlm: deep-query for exploration, subcall-batch for known files, REPL for metadata. Read is ONLY for config/markdown. Wait for deep-query results before proceeding.'",
            "timeout": 5000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/session-stop.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
